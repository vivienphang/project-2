<!DOCTYPE html>
<html lang="en">
  <head>
    <title>FRISK: Store & Track Your Food!</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
    <script src=" https://cdn.dribbble.com/users/1786581/screenshots/5471645/media/e3fa3b22c7431dd71ddc51597de6e354.gif"></script>
  </head>
  <body>
    <%- include('header-dash'); %>

    <div class="container">
      <div class="table-wrapper">
        <div class="table-title">
          <div class="row">
            <div class="col-sm-6">
              <h3>Manage Food Expiry</h3>
            </div>
            <div class="col-sm-6">
              <a href="/new-entry" class="btn btn-success" data-toggle="modal">
                <span>Add New Entry</span></a
              >
            </div>
          </div>
        </div>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Posted By</th>
              <th>Food</th>
              <th>Expiry Date</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% ejsArray.forEach((element) => { %>
            <tr>
              <td><%= element.user_name %></td>
              <td><%= element.food_name %></td>
              <td><%= element.expiry_date %></td>
              <td><%= element.status %></td>

              <td>
                <a
                  href="/single-entry/<%=element.food_id%>/edit"
                  class="btn btn-success"
                >
                  <span>Edit</span></a
                >

                <a
                  href="/delete-entry/<%=element.food_id%>"
                  class="btn btn-danger"
                >
                  <span>Delete</span></a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
  <!-- <%- include('footer'); %> -->
</html>
